<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <layer-list>
            <item android:width="@dimen/apply_button_size" android:height="@dimen/apply_button_size">
                <shape android:shape="rectangle">
                    <padding android:top="9dp" android:bottom="9dp" android:right="9dp" android:left="9dp"/>
                    <corners android:radius="10dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_check_arrow"/>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:width="@dimen/apply_button_size" android:height="@dimen/apply_button_size">
                <shape android:shape="rectangle">
                    <padding android:top="9dp" android:bottom="9dp" android:right="9dp" android:left="9dp"/>
                    <corners android:radius="10dp" />
                    <solid android:color="@color/green" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_check_arrow"/>
        </layer-list>
    </item>


</selector>