<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Counter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Counter.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"

        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"

        android:text="Iterations"
        android:textAppearance="@style/Text.Description.3"
        android:textColor="@color/light_gray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Counter.Subtract"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:rotation="180"
            android:padding="8dp"
            android:src="@drawable/counter_add_button_background" />

        <TextView
            android:id="@+id/Counter.Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"

            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"

            android:text="1"
            android:textAlignment="center"
            android:textAppearance="@style/Text.Header.2"
            android:textColor="@color/white"/>


        <ImageView
            android:id="@+id/Counter.Add"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:padding="8dp"
            android:src="@drawable/counter_add_button_background"/>

    </LinearLayout>
</LinearLayout>