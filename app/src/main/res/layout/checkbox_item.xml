<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Checkbox.Item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/Checkbox.Item.Icon"
        android:layout_width="@dimen/checkbox_circle_size"
        android:layout_height="@dimen/checkbox_circle_size"

        app:tint="@color/light_gray"
        android:src="@drawable/ic_checkbox_circle_nonactive"/>

    <TextView
        android:id="@+id/Checkbox.Item.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"

        android:text="Item"
        android:textAppearance="@style/Text.Description.2"
        android:textColor="@color/light_gray"/>

</LinearLayout>